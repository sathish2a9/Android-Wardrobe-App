<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.sathishkumar.mywardrobe.Fragments.PantFragment">

    <TextView
        android:id="@+id/addPantText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pant_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btn_add_pant"
        style="@style/fab_plus"
        android:layout_marginBottom="@dimen/fab_padding"
        android:layout_marginRight="@dimen/fab_padding"
        app:layout_anchor="@id/pant_view_pager"
        app:layout_anchorGravity="bottom|right" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
